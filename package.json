{
  "name": "@yourusername/mapped-types",
  "version": "0.1.0",
  "description": "A utility library for creating mapped types in TypeScript with support for class-validator and class-transformer metadata inheritance",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "require": "./dist/index.js",
      "import": "./dist/index.mjs"
    }
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "lint": "eslint \"**/*.ts\"",
    "format": "prettier --write \"**/*.ts\"",
    "docs": "typedoc --out docs src",
    "prepare": "husky install",
    "prepublishOnly": "npm test && npm run lint && npm run build",
    "preversion": "npm run lint",
    "version": "npm run format && git add -A",
    "postversion": "git push && git push --tags",
    "changeset": "changeset",
    "release": "npm run build && changeset publish",
    "commit": "git-cz"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yourusername/mapped-types.git"
  },
  "keywords": [
    "typescript",
    "mapped-types",
    "class-validator",
    "class-transformer",
    "dto",
    "validation",
    "transformation"
  ],
  "author": "Your Name <your.email@example.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/yourusername/mapped-types/issues"
  },
  "homepage": "https://github.com/yourusername/mapped-types#readme",
  "devDependencies": {
    "@changesets/cli": "^2.26.2",
    "@commitlint/cli": "^17.7.1",
    "@commitlint/config-conventional": "^17.7.0",
    "@jest/globals": "^29.7.0",
    "@types/jest": "^29.5.0",
    "@types/node": "^18.15.11",
    "@typescript-eslint/eslint-plugin": "^5.57.1",
    "@typescript-eslint/parser": "^5.57.1",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "commitizen": "^4.3.0",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.38.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.3",
    "jest": "^29.5.0",
    "lint-staged": "^14.0.1",
    "prettier": "^2.8.7",
    "reflect-metadata": "^0.1.13",
    "ts-jest": "^29.1.0",
    "tsup": "^7.2.0",
    "typedoc": "^0.25.1",
    "typescript": "^5.0.4"
  },
  "peerDependencies": {
    "class-transformer": ">=0.2.0",
    "class-validator": ">=0.11.0",
    "reflect-metadata": "^0.1.13"
  },
  "peerDependenciesMeta": {
    "class-transformer": {
      "optional": true
    },
    "class-validator": {
      "optional": true
    }
  },
  "files": [
    "dist/**/*",
    "LICENSE",
    "README.md",
    "CHANGELOG.md"
  ],
  "lint-staged": {
    "*.ts": [
      "prettier --write",
      "eslint --fix"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}